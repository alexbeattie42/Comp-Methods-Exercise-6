function F = forces(mbs, q)

F = zeros(mbs.nq, 1);
% forces due to gravity
if ~isempty(mbs.gravity)
    q_idx = 0;
    for b = mbs.bodies
       F(q_idx + (1:2)) = b.m .* mbs.gravity;
       q_idx = q_idx + 3;
    end
end
if ~isempty(mbs.forces.point_force)
    for f = mbs.forces.point_force
       q_idx = f.body;
       b  = mbs.bodies(q_idx);
       force = flip(f.force');
       F(q_idx + (1:2)) = F(q_idx + (1:2)) + force;
    end 
end


end
    
